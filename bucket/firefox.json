    "architecture": {
        "64bit": {
            "url": "https://download.mozilla.org/?product=firefox-100.0.2-SSL&os=win64&lang=en-GB#/firefox.7z",
            "hash": "b53fb348cac28b944fd86012ab0d3fe71990b0f835950dd340765e0731b0a899"
        },
        "32bit": {
            "url": "https://download.mozilla.org/?product=firefox-100.0.2-SSL&os=win&lang=en-GB#/firefox.7z",
